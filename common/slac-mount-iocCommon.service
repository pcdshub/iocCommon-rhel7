[Unit]
Description=SLAC mount /reg/d/iocCommon
After=network-online.target remote-fs.target system.slice
Wants=network-online.target remote-fs.target system.slice boot-complete.target

[Service]
Type=oneshot
RemainAfterExit=Yes
StandardOutput=syslog
TimeoutSec=0
Environment=IOC_COMMON=/reg/d/iocCommon
ExecStart=/bin/mount -o nolock,rw,hard,intr,vers=3 -t nfs 172.21.32.76:/nfsexport/datapool/iocCommon $IOC_COMMON
ExecStop=/bin/umount $IOC_COMMON

[Install]
WantedBy=multi-user.target
